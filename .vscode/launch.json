{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch via NPM",
            "runtimeExecutable": "npm",
            "windows": {
                "runtimeExecutable": "npm.cmd"
            },
            "runtimeArgs": [
                "start"
            ],
            "timeout": 30000,
            "port": 5858,
            "cwd": "${workspaceRoot}"
        }
    ]
}