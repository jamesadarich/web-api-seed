{
    "extends": "@justaddjam/tsconfig/node",
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "declaration": true,
      "sourceMap": true,
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "newLine": "LF",
      "outDir": "./build"
    },
    "exclude": [
        "./**/*.d.ts",
        "./node_modules"
    ],
    "include": [
        "./**/*.ts"
    ]
}
